{
  "name": "paint-library-app",
  "version": "0.0.1",
  "engines": {
    "node": "16.x",
    "npm": "7.x"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "start:deps": "npm ci --prod",
    "start:build": "node build",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "seed": "prisma db seed",
    "seed:paints": "node prisma/seed-paints.cjs",
    "seed:pigments": "node prisma/seed-pigments.cjs",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "test": "uvu tests '.spec.ts' -r tsm -r tests/setup/register -i setup",
    "generate": "prisma generate"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.4.1",
    "@types/imagekit": "^3.1.2",
    "@types/node": "^16.11.6",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "autoprefixer": "^10.4.1",
    "cookie": "^0.4.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.1",
    "jsdom": "^19.0.0",
    "pirates": "^4.0.4",
    "postcss": "^8.4.5",
    "prettier": "^2.4.1",
    "prisma": "^3.7.0",
    "svelte": "^3.42.6",
    "svelte-check": "^2.2.6",
    "svelte-preprocess": "^4.9.8",
    "tailwindcss": "^3.0.10",
    "tslib": "^2.3.1",
    "tsm": "^2.2.1",
    "typescript": "^4.5.2",
    "uvu": "^0.5.2"
  },
  "type": "module",
  "dependencies": {
    "@prisma/client": "^3.3.0",
    "@sendgrid/helpers": "^7.7.0",
    "@sendgrid/mail": "^7.7.0",
    "@sveltejs/adapter-node": "next",
    "@sveltejs/kit": "next",
    "bcrypt": "^5.0.1",
    "csv-parse": "^5.0.3",
    "dotenv": "^10.0.0",
    "imagekit-javascript": "^1.4.2",
    "uuid": "^8.3.2"
  }
}
